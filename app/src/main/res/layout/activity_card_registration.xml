<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llevame_app_project.Activities.CardRegistrationActivity">

    <EditText
        android:id="@+id/textLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="0dp"

        app:layout_constraintLeft_toLeftOf="@+id/textFirstName"
        app:layout_constraintTop_toBottomOf="@+id/textFirstName" />

    <EditText
        android:id="@+id/textFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/textCreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Credit card number"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textLastName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textLastName" />
    <Button
        android:id="@+id/next_step_button"
        android:layout_width="142dp"
        android:layout_height="60dp"
        android:text="Next step"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textCreditCard"
        app:layout_constraintLeft_toLeftOf="@+id/textCreditCard" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Complete the fields and press next"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>