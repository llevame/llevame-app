<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llevame_app_project.Activities.CarSettingsActivity">

    <TextView
        android:id="@+id/sTextModel"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:ems="10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/sTextPatent"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:ems="10"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/sTextModel"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/sTextModel"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/sTextColor"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/sTextPatent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/sTextPatent" />

    <TextView
        android:id="@+id/sTextYear"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:ems="10"
        app:layout_constraintLeft_toRightOf="@+id/sTextPatent"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/sTextModel" />

    <CheckBox
        android:id="@+id/settingsAcCheckBox"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="6dp"
        android:text="A/C"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@+id/sTextColor"
        app:layout_constraintTop_toBottomOf="@+id/sTextYear" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/sTextColor"
        android:layout_marginLeft="-9dp"
        app:layout_constraintLeft_toLeftOf="@+id/sTextColor" />

</android.support.constraint.ConstraintLayout>