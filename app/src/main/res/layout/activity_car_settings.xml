<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llevame_app_project.CarSettingsActivity">

    <TextView
        android:id="@+id/carModelText"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Car model"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/patentText"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Patent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/carModelText"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/carModelText"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Color"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/patentText"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/patentText" />

    <TextView
        android:id="@+id/yearText"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/patentText"
        android:layout_marginLeft="22dp"
        android:hint="year"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/carModelText" />

    <CheckBox
        android:id="@+id/acCheckBox"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="A/C"
        android:textSize="17dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/yearText"
        app:layout_constraintLeft_toRightOf="@+id/colorText"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/colorText"
        android:layout_marginLeft="-9dp"
        app:layout_constraintLeft_toLeftOf="@+id/colorText" />

</android.support.constraint.ConstraintLayout>